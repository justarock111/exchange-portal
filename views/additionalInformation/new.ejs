<%- include("../partials/header") %>
<%- include("../partials/schoolSidebar") %>
<!--Objects to pass in: current school-->
<div class="col-md-10">
    <h3 class="title top-margin">Other Useful Links</h3>
    <table id="links-table" class="table">
        <colgroup>
            <col style="width:3%">
            <col style="width:10%">
            <col style="width:20%">
            <col style="width:15%">

        </colgroup>
        <thead class="head-dark">
        <tr>
            <th scope="col">Index</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Link</th>
        </tr>
        </thead>
        <tbody>
        <% school.links.forEach((link, index) => { %>
        <tr>
            <th scope="row"><%- index + 1 %></th>
            <td><%= link.title %> </td>
            <td><%= link.description %></td>
            <td><a href="<%= link.url %>"  target="_blank"><%= link.url %></a></td>
        </tr>
        <% }); %>
        <form id="new-link-form" action="/schools/<%= school._id %>/additional_information" method="POST" >
            <tr>

                <th scope="row"><%- school.links.length + 1 %></th>
                <td><input type="text" name="title"> </td>
                <td><input type="text" name="description"></td>
                <td><input type="url" name="url"></td>
            </tr>
        </form>
        </tbody>
    </table>

    <button class="btn btn-primary-outline long-button" type="submit" form="new-link-form" value="Submit">Submit</button>
</div>


<%- include("../partials/footer") %>