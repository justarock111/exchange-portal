<%- include("../partials/header") %>
<!--Objects to pass in: current school-->
<div class="container-fluid">

    <div class="row">

        <div class="col-md-2">

            <p class="lead"><%= school.name %></p>


            <div class="thumbnail">

                <img src="<%= school.logoPath %>">

                <div class="caption">
                    <h4><%= school.name %></h4>
                    <h5><%= school.location %></h5>
                </div>

            </div>


            <div class="group">

                <li class="list-group-item"><a  href="/schools/<%=school._id%>">General Information</a></li>

                <li class="list-group-item"><a  href="/schools/<%=school._id%>/module_mappings">Module Mappings</a></li>

                <li class="list-group-item active"><a  href="/schools/<%=  school._id %>/additional_information">Additional Information</a></li>
            </div>


        </div>

        <div class="col-md-10" style="overflow-y: scroll; overflow-x: scroll height:400px;">




            <div class="thumbnail">

                </div>
                <div class="caption">
                    <div class="well">
                    <h2>Useful Links</h2>
                    <table id="links-table" class="table">
                        <thead class="head-dark">
                        <tr>
                            <th scope="col">Number</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Link</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% school.links.forEach((link, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>

                            <td>
                                <%= link.title %>
                            </td>

                            <td>
                                <%= link.description %>
                            </td>

                            <td>
                                <%= link.url %>
                            </td>

                            <td>

                                <% if(currentUser && link.author.id.equals(currentUser._id)) { %>

                                <form class="delete-from" action="/schools/<%= school._id %>/additional_information/<%= link._id %>?_method=DELETE" method="POST">
                                    <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                                </form>
                                <% } %>
                            </td>
                        </tr>
                        <% }); %>

                        </tbody>
                    </table>

                    <a class="btn btn-xs btn-warning" href="/schools/<%= school._id %>/additional_information/new">Add New Link</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include("../partials/footer") %>