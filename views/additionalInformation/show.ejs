<%- include("../partials/header") %>
<!--Objects to pass in: current school-->
<div class="container-fluid">

    <div class="row">

        <div class="col-md-2">

            <p class="lead"><h4><%= school.name %></h4></p>

            <div class="card">

                <img class="card-img-top" src="<%= school.logoPath %>" alt="card image cap">

                <div class="card-body">
                    <h6 class="card-title"><%= school.location %></h6>
                </div>

            </div>


            <div class="group">

                <li class="list-group-item"><a  href="/schools/<%=school._id%>">General Information</a></li>

                <li class="list-group-item"><a  href="/schools/<%=school._id%>/module_mappings">Module Mappings</a></li>

                <li class="list-group-item active"><a  href="/schools/<%=  school._id %>/additional_information">Additional Information</a></li>
            </div>


        </div>


        <div class="col-md-10" style="overflow-y: scroll; overflow-x: scroll height:400px;">
            <div class="thumbnail">
                <div class="caption">
                    <h2><%= link.title %></h2>
                    <section>

                        <embed src="<%= link.url %>" width="100%" height="650">

                    </section>
                    <p class="pull-right">
                        <em>Submitted by <%= link.author.username %></em>
                        <span class="float-right">New window: <a href="<%= link.url %>" target="_blank"><%= link.url %></a></span>

                    </p>

                </div>
                <div class="well">
                <div class="caption">
                    <h3>Other Useful Links</h3>
                    <table id="links-table" class="table">
                        <thead class="head-dark">
                        <tr>
                            <th scope="col">Number</th>
                            <th scope="col">Title</th>
                            <th scope="col">Description</th>
                            <th scope="col">Link</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% school.links.forEach((link, index) => { %>
                        <tr>
                            <th scope="row"><%- index + 1 %></th>
                            <td><%= link.title %> </td>
                            <td><%= link.description %></td>
                            <td><a href="/schools/<%= school._id %>/additional_information/<%= link._id %>"><%= link.url %></a></td>
                        </tr>
                        <% }); %>

                        </tbody>
                    </table>
                    <% if(currentUser) { %>
                    <a class="btn btn-xs btn-warning" href="/schools/<%= school._id %>/additional_information/edit">Edit table</a>
                    <% } %>

                </div>
                </div>
            </div>
        </div>
    </div>
</div>

    <%- include("../partials/footer") %>