<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/register" method="post">
                <div class="form-group">
                    <input class="form-control borderless-input" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input class="form-control borderless-input" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary-outline dropdown-button btn-block">Sign Up</button>
                </div>
            </form>
            <a href="javascript:history.back()" class="bottom-link">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>